<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashScreen" parent ="AppTheme">
      <item name="android:windowBackground">@drawable/splash_screen</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent ="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Light" parent ="Theme.AppCompat.Light">
    </style>

    <style name="AppTheme.LinearLayout" parent ="AppTheme.Dark.NoActionBar">
      <item name="android:orientation">vertical</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:gravity">center</item>
      <item name="android:background">@drawable/login_bg</item>
      <item name="android:paddingHorizontal">12dp</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent ="AppTheme.Dark.NoActionBar">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">84dp</item>
      <item name="android:paddingVertical">4dp</item>
      <item name="android:textColorHint">@color/colorTextInputHint</item>
    </style>

  <style name="AppTheme.TextInputEditText">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:singleLine">true</item>
      <item name="android:paddingHorizontal">12dp</item>
      <item name="android:textColor">@color/colorTextInputEdit</item>
      <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Button" parent ="AppTheme.Dark.NoActionBar">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:paddingVertical">4dp</item>
      <item name="android:textColor">@color/colorButtonText</item>
      <item name="android:backgroundTint">@color/colorButton</item>
    </style>

    <style name="ErrorText">
      <item name="android:textSize">10sp</item>
      <item name="android:textColor">@color/colorTextInputError</item>
    </style>

    <style name="LoginErrorText" parent="ErrorText">
      <item name="android:text">@string/login_is_empty</item>
    </style>

    <style name="PasswordErrorText" parent="ErrorText">
      <item name="android:text">@string/password_is_empty</item>
    </style>

  <style name="VacationTypeImageView">
    <item name="android:layout_width">@dimen/Inset14X</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/icon_request_blue</item>
  </style>

  <style name="VacationDurationTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">MAR 20 - MAR 31</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="VacationTypeTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">Regular</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="VacationStatusTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">Approved</item>
    <item name="android:gravity">center</item>
  </style>

    <style name="SeparatorView">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">@dimen/SeparatorSize</item>
    </style>

    <style name="SeparatorCellView" parent="SeparatorView">
      <item name="android:background">@color/colorSeparatorCell</item>
    </style>

    <style name="SeparatorDetailView" parent="SeparatorView">
      <item name="android:background">@color/colorSeparatorDetail</item>
    </style>

</resources>
