<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashScreen" parent ="AppTheme">
      <item name="android:windowBackground">@drawable/splash_screen</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent ="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Light" parent ="Theme.AppCompat.Light">
    </style>

    <style name="AppTheme.LinearLayout" parent ="AppTheme.Dark.NoActionBar">
      <item name="android:orientation">vertical</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:gravity">center</item>
      <item name="android:background">@drawable/login_bg</item>
      <item name="android:paddingHorizontal">12dp</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent ="AppTheme.Dark.NoActionBar">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:paddingVertical">4dp</item>
      <item name="android:textColorHint">@color/colorTextInputHint</item>
      <item name="android:layout_height">68dp</item>
    </style>

    <style name="AppTheme.TextInputEditText">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:singleLine">true</item>
      <item name="android:padding">12dp</item>
      <item name="android:textColor">@color/colorTextInputEdit</item>
      <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Button" parent ="AppTheme.Dark.NoActionBar">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:paddingVertical">4dp</item>
      <item name="android:textColor">@color/colorButtonText</item>
      <item name="android:backgroundTint">@color/colorButton</item>
    </style>

</resources>
